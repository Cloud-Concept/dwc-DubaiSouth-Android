<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageStatusDebitCredit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:background="@mipmap/payment_debit" />

    <TextView
        android:id="@+id/tvEmployeeNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageStatusDebitCredit"
        android:text="Employee Name:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/text_size_value"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/tvEmployeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvEmployeeNameLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/text_size_value"
        android:layout_toEndOf="@+id/tvEmployeeNameLabel"
        android:gravity="left"
        android:text="fnewiofnoewnfoi"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmployeeNameLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imageStatusDebitCredit"
        android:text="Date:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/text_size_value"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDateLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/tvDateLabel"
        android:gravity="left"
        android:textSize="@dimen/text_size_value"
        android:text="newlnweknfkewnlknekwndew"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDateLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imageStatusDebitCredit"
        android:text="Amount:"
        android:textSize="@dimen/text_size_value"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvAmountLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/text_size_value"
        android:layout_toEndOf="@+id/tvAmountLabel"
        android:gravity="left"
        android:text="djewjde"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBalanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAmountLabel"
        android:layout_marginTop="3dp"
        android:layout_toStartOf="@+id/tvAmount"
        android:text="Balance:"
        android:textSize="@dimen/text_size_value"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvBalanceLabel"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/text_size_value"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/tvBalanceLabel"
        android:gravity="left"
        android:text="dnewoidnewoind"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBalanceLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/imageStatusDebitCredit"
        android:textSize="@dimen/text_size_value"
        android:text="Status:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvStatusLabel"
        android:textSize="@dimen/text_size_value"
        android:layout_alignEnd="@+id/tvDate"
        android:layout_alignTop="@+id/tvStatusLabel"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/tvStatusLabel"
        android:gravity="left"
        android:text="dnewoidnewoind"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>