<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="40dp"
            android:text="Note:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:text="-This service will be subject to approval"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="7dp"
            android:text="-Make sure your new capital should be minimum AED 300,000 and MUST be numeric with no decimal value"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:text="Share Capital(AED)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etShareCapital"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/edit_text_background_disabled"
            android:gravity="center"
            android:inputType="number"
            android:text="450,000" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:text="New Share Capital(AED)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNewShareCapital"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/search_edit_text_background"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:singleLine="true" />

    </LinearLayout>
</ScrollView>