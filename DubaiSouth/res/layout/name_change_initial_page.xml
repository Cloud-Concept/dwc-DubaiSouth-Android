<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Note:"
        android:textStyle="bold"
        android:id="@+id/textView39"
        android:layout_marginStart="22dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="-This service will be subject to approval"
        android:textStyle="normal"
        android:id="@+id/textView40"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        android:text="Company Name"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/edit_text_background_disabled"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"

        android:layout_marginTop="21dp"
        android:text="Company Name (Arabic)"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCompanyNameArabic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/edit_text_background_disabled"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        android:text="Company Name"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNewCompanyName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="21dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/search_edit_text_background"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        android:text="Company Name (Arabic)"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNewCompanyNameArabic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_marginRight="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/search_edit_text_background"
        android:gravity="center" />


</LinearLayout>