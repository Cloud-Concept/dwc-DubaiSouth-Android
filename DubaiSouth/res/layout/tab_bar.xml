<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/black_night"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relativeTabBarHome"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageTabBarHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/tab_bar_home" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageTabBarHome"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:text="Home"
                android:textColor="@color/grey" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeTabBarRequest"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageTabBarRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/tab_bar_request" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageTabBarRequest"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:text="Request"
                android:textColor="@color/grey" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeTabBarReport"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageTabBarReports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/tab_bar_reports" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageTabBarReports"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Reports"
                android:textColor="@color/grey" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeTabBarDashboard"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageTabBarDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/tab_bar_dashboard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageTabBarDashboard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Dashboard"
                android:textColor="@color/grey" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>